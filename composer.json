{
  "name": "pjpawel/magis",
  "type": "library",
  "description": "PHP templating engine",
  "keywords": [
    "templates"
  ],
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Paweł Podgórski",
      "email": "pawel.jan.podgorski@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "9.5.*"
  },
  "autoload": {
    "psr-4": {
      "pjpawel\\Magis\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "pjpawel\\Magis\\Test\\": "tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit .",
    "coverage": "php -d xdebug.mode=coverage vendor\\bin\\phpunit --coverage-clover coverage.xml ."
  }
}

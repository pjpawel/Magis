{
  "name": "pjpawel/magis",
  "type": "library",
  "description": "PHP templating engine",
  "keywords": [
    "templates"
  ],
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "Paweł Podgórski",
      "email": "pawel.jan.podgorski@gmail.com"
    }
  ],
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "9.5.*",
    "phpstan/phpstan": "^1.9"
  },
  "autoload": {
    "psr-4": {
      "pjpawel\\Magis\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "pjpawel\\Magis\\Test\\": "tests"
    }
  },
  "scripts": {
    "unit": "vendor/bin/phpunit -c phpunit.xml --no-coverage .",
    "coverage": "php -d xdebug.mode=coverage vendor\\bin\\phpunit --coverage-clover coverage.xml .",
    "stan": "vendor/bin/phpstan analyse",
    "all": [
      "@unit",
      "@stan"
    ]
  }
}
